#!/usr/bin/env bash
# Commit message hook for RAG SDK
# Enforces conventional commit format

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

COMMIT_MSG_FILE=$1
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")

# Skip merge commits
if echo "$COMMIT_MSG" | grep -qE "^Merge branch"; then
    exit 0
fi

# Conventional Commits format: <type>(<scope>): <description>
# Types: feat, fix, docs, style, refactor, perf, test, build, ci, chore
PATTERN="^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\([a-z0-9\-]+\))?: .{1,100}$"

if ! echo "$COMMIT_MSG" | head -n1 | grep -qE "$PATTERN"; then
    echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo -e "${RED}✗ Invalid commit message format${NC}"
    echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}\n"
    
    echo -e "${YELLOW}Commit message must follow Conventional Commits format:${NC}"
    echo -e "${GREEN}<type>(<scope>): <description>${NC}\n"
    
    echo -e "${YELLOW}Types:${NC}"
    echo "  feat:     A new feature"
    echo "  fix:      A bug fix"
    echo "  docs:     Documentation only changes"
    echo "  style:    Code style changes (formatting, etc.)"
    echo "  refactor: Code refactoring"
    echo "  perf:     Performance improvements"
    echo "  test:     Adding or updating tests"
    echo "  build:    Build system changes"
    echo "  ci:       CI/CD changes"
    echo "  chore:    Other changes (dependencies, etc.)"
    echo ""
    
    echo -e "${YELLOW}Examples:${NC}"
    echo "  feat(embeddings): add support for Cohere embeddings"
    echo "  fix(vectorstore): handle connection timeout errors"
    echo "  docs(readme): update installation instructions"
    echo "  test(retrieval): add unit tests for hybrid search"
    echo ""
    
    echo -e "${RED}Your commit message:${NC}"
    echo "$COMMIT_MSG"
    echo ""
    
    exit 1
fi

# Check subject line length (max 100 chars)
SUBJECT=$(echo "$COMMIT_MSG" | head -n1)
SUBJECT_LENGTH=${#SUBJECT}

if [ $SUBJECT_LENGTH -gt 100 ]; then
    echo -e "${RED}✗ Subject line too long: ${SUBJECT_LENGTH} chars (max 100)${NC}"
    exit 1
fi

# Check if there's a blank line after subject (if body exists)
if [ "$(echo "$COMMIT_MSG" | wc -l)" -gt 1 ]; then
    SECOND_LINE=$(echo "$COMMIT_MSG" | sed -n '2p')
    if [ -n "$SECOND_LINE" ]; then
        echo -e "${RED}✗ Missing blank line after subject${NC}"
        exit 1
    fi
fi

# Success
echo -e "${GREEN}✓ Commit message format is valid${NC}"
exit 0
